{
    "extends": "airbnb-base",
    "env":{
        "browser": true
    },
    "globals": {
        "$": true,
        "ko": true,
        "page": true
    },
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],  "// personal preference": "",
        "linebreak-style": ["error", "windows"],    "// I use multiple environments": "",
        "comma-dangle": ["error", "never"],         "// YAGNI": "",
        "brace-style": ["error", "stroustrup"],     "// personal preference also": "",
        "no-underscore-dangle": "off",              "// used to denote 'private' properties and functions": "",
        "arrow-body-style": "off",                  "// freedom to use blocks when more readable instead of using ({ return ... })": ""
    }
}